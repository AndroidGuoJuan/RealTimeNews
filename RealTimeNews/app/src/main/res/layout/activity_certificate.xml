<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.liuming.mylibrary.widge.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/title_color"
        app:has_back="false"
        app:left_icon="@mipmap/btn_back"
        app:title_size="16sp"
        app:title_text="证件信息" />

    <TextView
        android:id="@+id/certi_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:drawableRight="@mipmap/arrow_right"
        android:hint="请选择证件类型"
        android:padding="10dp"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray" />


    <com.liuming.mylibrary.widge.CommaView
        android:id="@+id/certi_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_stroke_gray"
        android:hint="请输入要证件号"
        android:padding="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/certi_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_stroke_gray"
        android:hint="请输入用户姓名"
        android:padding="10dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/aquire_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_fill_circle_primary"
        android:gravity="center"
        android:padding="10dp"
        android:text="获取"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/show_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="10dp"
        android:textSize="16sp" />
</LinearLayout>